{
    "extends": [
        "config:base"
    ],
    "regexManagers": [
        {
            "fileMatch": ["^vars.yml$"],
            "matchStringsStrategy": "combination",
            "matchStrings": [
                "mqtt_mosquitto_version:\\s*\"(?<currentValue>.*)\"\\s*//"
            ],
            "datasourceTemplate": "docker",
            "depNameTemplate": "eclipse-mosquitto"
        },
        {
            "fileMatch": ["^vars.yml$"],
            "matchStringsStrategy": "combination",
            "matchStrings": [
                "home_assistant_version:\\s*\"(?<currentValue>.*)\"\\s*//"
            ],
            "datasourceTemplate": "docker",
            "depNameTemplate": "homeassistant/home-assistant"
        },
        {
            "fileMatch": ["^vars.yml$"],
            "matchStringsStrategy": "combination",
            "matchStrings": [
                "grafana/grafana:\\s*\"(?<currentValue>.*)\"\\s*//"
            ],
            "datasourceTemplate": "docker",
            "depNameTemplate": "homeassistant/home-assistant"
        },
        {
            "fileMatch": ["^vars.yml$"],
            "matchStringsStrategy": "combination",
            "matchStrings": [
                "ble2mqtt_version:\\s*\"(?<currentValue>.*)\"\\s*//"
            ],
            "datasourceTemplate": "docker",
            "depNameTemplate": "lordthorzonus/ble2mqtt-gateway"
        },
        {
            "fileMatch": ["^vars.yml$"],
            "matchStringsStrategy": "combination",
            "matchStrings": [
                "zigbee2mqtt_version:\\s*\"(?<currentValue>.*)\"\\s*//"
            ],
            "datasourceTemplate": "docker",
            "depNameTemplate": "koenkk/zigbee2mqtt"
        },
        {
            "fileMatch": ["^vars.yml$"],
            "matchStringsStrategy": "combination",
            "matchStrings": [
                "traefik_version:\\s*\"(?<currentValue>.*)\"\\s*//"
            ],
            "datasourceTemplate": "docker",
            "depNameTemplate": "traefik"
        }
    ]
}
